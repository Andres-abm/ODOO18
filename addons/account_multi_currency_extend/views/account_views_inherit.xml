<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Move VIEW -->
    <record model="ir.ui.view" id="view_move_form_inherit_multicurrency_extend">
        <field name="name">account.move.form.inherit.multicurrency.extend</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/list/field[@name='currency_id']" position="after">
                <field name="exchange_currency" force_save="1" invisible="True" column_invisible = "True"/>
                <field name="exchange_amount" force_save="1" optional="hide" sum="Total Exchange Balance" column_invisible = "not parent.enable_second_currency_for_company"/>

                <field name="debit_exchange" force_save="1" optional="show" sum="Total Exchange Debit Amount" column_invisible = "not parent.enable_second_currency_for_company"/>

                <field name="credit_exchange" force_save="1" optional="show" sum="Total Exchange Credit Amount" column_invisible = "not parent.enable_second_currency_for_company"/>
            </xpath>

            <!--  Mohamad Changes Starts From Here -->
            <xpath expr="//group[@id='header_right_group']/div[@name='journal_div']" position="after">
                <field name="enable_second_currency_for_company" invisible="True" />
                <field name="company_second_currency_id" invisible="True" column_invisible = "True"/>
            </xpath>

            <xpath expr="//page[@id='aml_tab']//field[@name='currency_id']" position="replace">
                <field name="amount_currency" groups="base.group_multi_currency" optional="show" />
            </xpath>

            <xpath expr="//page[@id='aml_tab']//field[@name='amount_currency']" position="replace">
                <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"
                    column_invisible = "parent.move_type != 'entry'" />
            </xpath>

            <xpath expr="//group[@id='header_right_group']//field[@name='invoice_date']" position="replace">
                <field name="invoice_date" nolabel="1" options="{'datepicker': {'warn_future': true}}"
                    required = "'move_type' in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt']"
                    invisible = "move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt']" />
            </xpath>

        </field>
    </record>


    <record model="ir.ui.view" id="view_move_form_inherit_multicurrency_extend_items">
        <field name="name">account.move.line.form.inherit.multicurrency.extend</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='balance']" position="after">
                <field name="company_id" column_invisible="True"/>
                <field name="exchange_currency" force_save="1"/>
                <field name="exchange_amount" optional="show" force_save="1" sum="Total Exchange Balance" />
                <field name="debit_exchange" optional="show" force_save="1" sum="Total Exchange Debit Amount" />
                <field name="credit_exchange" optional="show" force_save="1" sum="Total Exchange Credit Amount" />
            </xpath>
        </field>
    </record>

</odoo>