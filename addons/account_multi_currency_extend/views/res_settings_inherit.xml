<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='currency_id']/parent::*/parent::*/parent::*/parent::*/parent::*"
                position="inside">
                <div class="col-12 col-lg-6 o_setting_box"
                invisible="not enable_second_currency_for_company">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Second Currency</span>
                        <span class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            aria-label="Values set here are company-specific."
                            groups="base.group_multi_company"
                            role="img" />
                        <div class="text-muted">
                            Second currency of your company
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="second_currency_id" class="col-lg-3 o_light_label" />
                                <field name="second_currency_id"
                                    options="{'no_create_edit': True, 'no_open': True}"
                                    context="{'active_test': False}"
                                    required="enable_second_currency_for_company"/>
                                <field name="enable_second_currency_for_company" invisible="1" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>