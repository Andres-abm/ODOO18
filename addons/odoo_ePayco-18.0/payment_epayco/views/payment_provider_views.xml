<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Epayco Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'epayco'">
                    <field name="epayco_cust_id" required="code == 'epayco' and state != 'disabled'"/>
                    <field name="epayco_public_key" required="code == 'epayco' and state != 'disabled'" password="True"/>
                    <field name="epayco_private_key" required="code == 'epayco' and state != 'disabled'" password="True"/>
                    <field name="epayco_p_key" required="code == 'epayco' and state != 'disabled'" password="True"/>
                    <field name="epayco_checkout_type" required="code == 'epayco' and state != 'disabled'" />
                    <field name="epayco_checkout_lang" required="code == 'epayco' and state != 'disabled'" />
                </group>
            </group>
        </field>
    </record>

</odoo>
