<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Category for Multi-Company Access -->
        <record id="module_category_multi_company_selection" model="ir.module.category">
            <field name="name">Multi-Company Selection</field>
            <field name="description">Manage multi-company selection permissions</field>
            <field name="sequence">100</field>
        </record>

        <!-- Group: Allow Multi-Company Selection -->
        <record id="group_multi_company_selection" model="res.groups">
            <field name="name">Allow Multiple Company Selection</field>
            <field name="category_id" ref="module_category_multi_company_selection"/>
            <field name="comment">Users in this group can select multiple companies simultaneously</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Assign Admin to multi-company group by default -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_multi_company_selection'))]"/>
        </record>

    </data>
</odoo>
