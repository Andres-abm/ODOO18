<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Inherit User Form View -->
        <record id="view_users_form_inherit_restrict_company" model="ir.ui.view">
            <field name="name">res.users.form.inherit.restrict.company</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                
                <!-- Add field after company_ids -->
                <xpath expr="//field[@name='company_ids']" position="after">
                    <field name="allow_multi_company" invisible="1"/>
                    <div class="alert alert-warning" role="alert" 
                         invisible="allow_multi_company">
                        <strong>Note:</strong> This user can only select ONE company at a time.
                        To allow multiple company selection, add them to the 
                        "Allow Multiple Company Selection" group.
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
