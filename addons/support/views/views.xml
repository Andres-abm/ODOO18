<odoo>
  <data>
    <!-- explicit list view definition -->


    <record model="ir.ui.view" id="appointment_list">
      <field name="name">Appointment List</field>
      <field name="model">support.appointment</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="mail"/>
          <field name="phone"/>
          <field name="description"/>
          <field name="service_ids"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="appointment_action_window">
      <field name="name">Show appointment list</field>
      <field name="res_model">support.appointment</field>
      <field name="view_mode">list,form</field>
    </record>
    <record model="ir.actions.act_window" id="service_action_window">
      <field name="name">Show service list</field>
      <field name="res_model">support.service</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="SGE Support" id="support.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Citas" id="support_appointment" parent="support.menu_root"/>
    <menuitem name="Servicios" id="support_service" parent="support.menu_root"/>
  

    <!-- actions -->

    <menuitem name="Mostrar lista" id="support_appointment_list" parent="support_appointment"
              action="appointment_action_window"/>
    <menuitem name="Mostrar lista" id="support_service_list" parent="support_service"
              action="service_action_window"/>

  </data>
</odoo>
